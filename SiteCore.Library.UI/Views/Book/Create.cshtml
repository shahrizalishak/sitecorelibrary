@model SiteCore.Library.UI.Models.CreateBookViewModel

@{
    ViewData["Title"] = "Add New";
}

<h1>@ViewData["Title"]</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Author" class="control-label"></label>
                @foreach (var author in Model.AvailableAuthors)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"
                                   name="SelectedAuthors"
                                   value="@author.Id" /> @author.Name
                            </label>
                        </div>
                    }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}